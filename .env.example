# MeTube with Spotify Integration Configuration

# Basic Settings
UID=1000
GID=1000
DOWNLOAD_DIR=/downloads
AUDIO_DOWNLOAD_DIR=/downloads/audio

# Spotify Integration (Optional but recommended for better results)
# Create app at: https://developer.spotify.com/dashboard
# Required for playlist/album metadata extraction
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Alternative: Set via YTDL_OPTIONS JSON
# YTDL_OPTIONS={"spotify_client_id": "your_id", "spotify_client_secret": "your_secret"}

# Output Templates
OUTPUT_TEMPLATE=%(title)s.%(ext)s
OUTPUT_TEMPLATE_PLAYLIST=%(playlist_title)s/%(playlist_index)s-%(title)s.%(ext)s

# Directory Management
CUSTOM_DIRS=true
CREATE_CUSTOM_DIRS=true

# Performance for Large Playlists
MAX_CONCURRENT_DOWNLOADS=2
DOWNLOAD_MODE=limited

# Quality Defaults
DEFAULT_QUALITY=best
DEFAULT_FORMAT=any

# Advanced Options
LOGLEVEL=INFO